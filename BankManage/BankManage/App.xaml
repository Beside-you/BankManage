<Application x:Class="BankManage.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Main.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="workDateTemplate">
                <TextBlock Text="{Binding workDate,StringFormat={}{0:yyyy-MM-dd} }"></TextBlock>
                
            </DataTemplate>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resource/DataGridColumnTemplate.xaml" />
                <ResourceDictionary Source="/Resource/DataGridStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
